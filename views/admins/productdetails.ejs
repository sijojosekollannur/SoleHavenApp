<style>
    .product-details {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        margin: 50px 0;
    }
    .product-images img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 10px;
    }
    .product-specs p {
        margin-bottom: 5px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="product-details">
                <h1 class="text-center mb-4"><%= product.brandName %></h1><h2 class="text-center mb-4"><%= product.productName %></h2>
                <% if (product.productImages && product.productImages.length > 0) { %>
                    <h4>Images:</h4>
                    <div class="row product-images">
                        <% product.productImages.forEach(image => { %>
                            <div class="col-md-4">
                                <img src="<%= image %>" class="img-fluid" alt="Product Image">
                            </div>
                        <% }); %>
                    </div>
                <% } %>
                <p><strong>Brand:</strong> <%= product.brandName %></p>
                <p><strong>Name:</strong> <%= product.productName %></p>
                <p><strong>Category:</strong> <%= product.productCategory?.categoryName %></p>
                <p><strong>Color:</strong> <%= product.color %></p>
                <p><strong>Size:</strong> <%= product.sizeInch %></p>
                <p><strong>Price:</strong> <%= product.price %></p>
                <p><strong>Discounted Price:</strong> <%= product.discountPrice %></p>
                <p><strong>Stock:</strong> <%= product.stock %></p>
                <p><strong>Star Rating:</strong> <%= product.starRating %></p>
                <p><strong>isFeatured:</strong> <%= product.isFeatured %></p>
                <p><strong>Highlights:</strong> <%= product.highlights %></p>
                <h4><strong>Specifications:</strong></h4>
                <div class="product-specs">
                    <% if (product.specifications && Object.keys(product.specifications).length > 0) { %>
                        <% Object.keys(product.specifications).forEach(key => { %>
                            <p><strong><%= key %>:</strong> <%= product.specifications[key] %></p>
                        <% }); %>
                    <% } else { %>
                        <p>No specifications available</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
